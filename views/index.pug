doctype html
html
  head
    title Socket.IO chat
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: absolute; left: 30%; top: 30%}
      form input { border: 0; padding: 10px; width: 150px; }
      form button { background: rgb(0, 130, 130); border: none; padding: 10px; }
      h3 { font-size: 15px; color : #FFF; padding: 5px}
  body
    form(action='/', method='post')
      div
        h3 Enter Your Name :
      input(name='username')
      button Confirm